# --- DATABASE CONFIGURATION ---
# These are used for PostgreSQL connection
PG_USER=your_postgres_user
PG_PASSWORD=your_postgres_password
PG_HOST=your_host (e.g., localhost or your-db-host.com)
PG_PORT=5432
PG_DATABASE=educonnect_matchmaking

# Duplicated keys if your code uses different prefixes
MM_DB_USER=your_postgres_user
MM_DB_PASSWORD=your_postgres_password
MM_DB_HOST=your_host
MM_DB_PORT=5432
MM_DB_NAME=educonnect_matchmaking

# --- AI CONFIGURATION ---
# Get your key from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key

# --- EMAIL (SMTP) CONFIGURATION ---
# Example for Gmail:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
# For Gmail, use an 'App Password', not your main account password
EMAIL_PASS=your_app_password

# --- SERVER CONFIGURATION ---
PORT=5000
